            <propertyGroup caption="Data Connections">
                <property key="dataHandler" type="action">
                    <caption>Flow to handle new audio</caption>
                    <description />
                </property>

                <property key="audioEntity" type="datasource" isList="true" required="false">
                    <caption>Audio Entity</caption>
                    <description>System.FileDocument type entity to hold audio</description>
                </property>
            </propertyGroup>
-->

        </propertyGroup>
        <propertyGroup caption="Common">
            <systemProperty key="Name"/>
            <systemProperty key="TabIndex"/>
        </propertyGroup>
    </properties>
</widget>